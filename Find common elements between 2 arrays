"""
function takes two arrays as argument
and returns a third array with all common elements of the two arrays
for example arr1 = [1,2,3] and arr2= [2,3,4], then arr3 = [2,3]
"""
def common_element(arr1, arr2):
    arr3 = []
    for i in range(len(arr1)):
        for j in range(len(arr2)):
            if arr1[i] == arr2[j]:
                arr3.append(arr1[i])
    return arr3

if __name__  == "__main__":
    a = [1,2,3]
    b = [2,3,4]
    print (common_element(a,b))
